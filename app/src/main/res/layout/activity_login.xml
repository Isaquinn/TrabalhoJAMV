<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tela_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="40dp"
    android:background="#6A5ACD"
    android:paddingRight="40dp"
    tools:context="com.example.isaquearaujo.trabalhojamv.Login">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1.0">
        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".55">
            <ImageView
                android:id="@+id/jamvl"
                android:src="@drawable/triste"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".10">
            <EditText
                android:gravity="center_vertical"
                android:textColorHint="#6A5ACD"
                android:hint="E-MAIL"
                android:textSize="17dp"
                android:paddingLeft="12dp"
                android:background="@drawable/edittext_bg"
                android:inputType="textPersonName"
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_alignStart="@+id/LogIn"
                android:layout_alignEnd="@+id/LogIn" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".10">
            <EditText
                android:gravity="center_vertical"
                android:textColorHint="#6A5ACD"
                android:hint="SENHA"
                android:textSize="17dp"
                android:paddingLeft="12dp"
                android:background="@drawable/edittext_bg"
                android:layout_below="@id/login"
                android:inputType="textPassword"
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignEnd="@+id/login"
                android:layout_alignStart="@+id/login" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".15">
            <Button
                android:layout_gravity="center"
                android:textSize="18dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/contornbutton"
                android:text="Entrar"
                android:layout_below="@id/password"
                android:id="@+id/LogIn"
                android:layout_width="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_height="40dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".10">
            <TextView
                android:textSize="20dp"
                android:textColor="#fff"
                android:textAlignment="center"
                android:layout_below="@id/LogIn"
                android:text="Criar"
                android:id="@+id/naoexisteconta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>