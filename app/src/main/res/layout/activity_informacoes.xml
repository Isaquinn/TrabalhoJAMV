<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tela_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="40dp"
    android:background="#6A5ACD"
    android:paddingRight="40dp"
    tools:context="com.example.isaquearaujo.trabalhojamv.Informacoes">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1.0">
        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".45">
            <ImageView
                android:id="@+id/jamvl"
                android:src="@drawable/feliz"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".10">
            <TextView
                android:gravity="center_vertical"
                android:textColorHint="#6A5ACD"
                android:textSize="17dp"
                android:paddingLeft="12dp"
                android:inputType="textPersonName"
                android:id="@+id/nomeinfo"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_alignStart="@+id/LogIn"
                android:layout_alignEnd="@+id/LogIn" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".10">
            <TextView
                android:gravity="center_vertical"
                android:textColorHint="#6A5ACD"
                android:textSize="17dp"
                android:paddingLeft="12dp"
                android:layout_below="@id/nomeinfo"
                android:inputType="textPersonName"
                android:id="@+id/emailinfo"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignEnd="@+id/login"
                android:layout_alignStart="@+id/login" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".10">
            <TextView
                android:gravity="center_vertical"
                android:textColorHint="#6A5ACD"
                android:textSize="17dp"
                android:paddingLeft="12dp"
                android:layout_below="@id/login"
                android:inputType="textPersonName"
                android:id="@+id/datainfo"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignEnd="@+id/login"
                android:layout_alignStart="@+id/login" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".10">
            <TextView
                android:gravity="center_vertical"
                android:textColorHint="#6A5ACD"
                android:textSize="17dp"
                android:paddingLeft="12dp"
                android:layout_below="@id/login"
                android:inputType="textPersonName"
                android:id="@+id/sexoinfo"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignEnd="@+id/login"
                android:layout_alignStart="@+id/login" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".10">
            <TextView
                android:gravity="center_vertical"
                android:textColorHint="#6A5ACD"
                android:textSize="17dp"
                android:paddingLeft="12dp"
                android:layout_below="@id/login"
                android:inputType="textPersonName"
                android:id="@+id/corinfo"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignEnd="@+id/login"
                android:layout_alignStart="@+id/login" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
